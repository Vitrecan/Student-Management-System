<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.layout.VBox?>	
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>

<VBox styleClass="background" prefHeight="300.0" prefWidth="600.0" spacing="50" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.SessionController">    
    
    <VBox styleClass="header" spacing="25">
        <ImageView>
            <image>
                <Image url="@uts.png"/>
            </image>
        </ImageView>
        <Label styleClass="h1" text="Tuition Management System"/>
    </VBox>
     
    <VBox alignment="CENTER_RIGHT" spacing="10">
        <Button text="Login" fx:id="loginBtn" onAction="#handleLogin"/>
        <Button text="Exit" fx:id="exitBtn" onAction="#handleExit"/>
    </VBox>
     
    <stylesheets>
        <URL value="@tmsfx.css"/>
    </stylesheets>    
</VBox>
